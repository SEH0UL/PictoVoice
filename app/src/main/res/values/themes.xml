<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PictoVoice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PictoVoice" parent="Base.Theme.PictoVoice" />

    <style name="UserProfileStatCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item> <item name="cardBackgroundColor">#E8EAF6</item> </style>

    <style name="UserProfileStatLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UserProfileStatLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item> <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="UserProfileStatCount" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item> <item name="android:textStyle">bold</item>
    </style>
</resources>